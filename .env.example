# Frontend Environment Configuration
# Copy this file to .env.local for development

# ============================================
# API Configuration
# ============================================

# Backend API base URL (REST endpoints)
# Development: http://localhost:3000/api/v1
# Production: https://api.example.com/v1
VITE_API_URL=http://localhost:3000/api/v1

# WebSocket URL for real-time communication
# Development: ws://localhost:3000/ws (or http://localhost:3000/ws - auto-converted)
# Production: wss://api.example.com/ws
VITE_WS_URL=ws://localhost:3000/ws

# ============================================
# Demo Mode Configuration
# ============================================

# Enable demo mode to use mock data instead of real API
# Set to 'true' to enable demo mode (uses mock data)
# Set to 'false' or leave empty to use real API
# Demo mode is useful for:
# - Testing without backend server
# - Showcasing the application
# - Development when backend is unavailable
VITE_DEMO_MODE=false

# ============================================
# Optional Configuration
# ============================================

# Enable debug mode (logs API requests/responses)
# VITE_DEBUG=false

# API request timeout in milliseconds (default: 30000)
# VITE_API_TIMEOUT=30000

# Maximum file upload size in bytes (default: 10MB)
# VITE_MAX_UPLOAD_SIZE=10485760

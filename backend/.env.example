QUIC_MAX_CONNECTIONS=10000
QUIC_MAX_STREAMS_PER_CONNECTION=100
QUIC_IDLE_TIMEOUT_MS=30000
QUIC_KEEP_ALIVE_INTERVAL_MS=5000
